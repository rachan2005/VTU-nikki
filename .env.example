# ============================================================================
# VTU Diary Automation v3.0 — Server Configuration
# ============================================================================
# Copy this file to .env and fill in your values.
#
# NOTE: API keys and portal credentials can also be configured per-user
# via the Settings page in the browser (stored in localStorage).
# Browser settings take priority over these environment variables.
# For shared/hosted deployments, you can skip the credential sections
# entirely and let each user configure their own in the browser.

# ============================================================================
# LLM PROVIDER (optional — can be set per-user in browser Settings)
# ============================================================================
# Options: auto, groq, gemini, cerebras, openai
# Set to "auto" to enable automatic fallback chain (recommended)
LLM_PROVIDER=auto

# Groq (FREE — 14,400 requests/day, blazing fast)
# Get your key: https://console.groq.com/keys
# GROQ_API_KEY=

# Google Gemini (FREE — 20 requests/day)
# Get your key: https://aistudio.google.com/apikey
# GEMINI_API_KEY=

# Cerebras (PAID — fastest inference)
# Get your key: https://cloud.cerebras.ai
# CEREBRAS_API_KEY=

# OpenAI (PAID — most capable)
# Get your key: https://platform.openai.com/api-keys
# OPENAI_API_KEY=

# ============================================================================
# VTU PORTAL CREDENTIALS (optional — can be set per-user in browser Settings)
# ============================================================================
PORTAL_LOGIN_URL=https://vtu.internyet.in/sign-in
# VTU_EMAIL=
# VTU_PASSWORD=

# ============================================================================
# BROWSER AUTOMATION
# ============================================================================
HEADLESS=true
MAX_PARALLEL_BROWSERS=2
SUBMISSION_DELAY_SECONDS=3.0

# ============================================================================
# AI PROCESSING
# ============================================================================
BATCH_SIZE_DAYS=20
CONFIDENCE_THRESHOLD=0.75
DEFAULT_HOURS_PER_DAY=7.0
MIN_ENTRY_WORDS=150
MAX_ENTRY_WORDS=200

# ============================================================================
# DATE MANAGEMENT
# ============================================================================
SKIP_WEEKENDS=true
SKIP_HOLIDAYS=true
DEFAULT_COUNTRY=IN
MAX_DATE_RANGE_DAYS=90

# ============================================================================
# WEB SERVER
# ============================================================================
API_HOST=0.0.0.0
API_PORT=5000
DEBUG_MODE=false

# ============================================================================
# OPTIONAL
# ============================================================================
LOG_LEVEL=INFO
ENABLE_SCREENSHOTS=true
ENABLE_CACHING=true
WHISPER_MODEL=base
WHISPER_LANGUAGE=en

# ============================================================================
# ADVANCED
# ============================================================================
LLM_MAX_RETRIES=3
MAX_SUBMISSION_RETRIES=3
RETRY_BACKOFF_FACTOR=2.0
BROWSER_ENGINE=playwright
BROWSER_PROFILE=default
# DATABASE_URL=sqlite:///vtu_automation.db
